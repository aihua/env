set fileencodings=utf-8,gb18030,gb2312,gbk,ucs-bom,cp936

set showmode

set tabstop=2           " size of a hard tabstop
set softtabstop=2       " number of columns for a TAB
set shiftwidth=2        " size of an indent, used by things like the =, > and < commands.
set expandtab           " always uses spaces instead of tab characters
set ai
set si
set re=2                " use NFA engine for regexpengine if hang when editing TypeScript on macOS, 
                        " :help 're' and :help two-engines in details.

syntax on
